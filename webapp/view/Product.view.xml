<mvc:View
    controllerName="sapui5task2.controller.Product"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:uxap="sap.uxap"
    xmlns:smart="sap.ui.comp.smarttable"
    core:require="{FloatType: 'sap/ui/model/type/Float'}"
>
    <uxap:ObjectPageLayout
        id="productPage"
    >
        <uxap:headerTitle>
            <uxap:ObjectPageHeader
                objectTitle="{odataV2>Name}"
            >
                <uxap:actions>
                    <Button
                        icon="sap-icon://nav-back"
                        tooltip="{i18n>navBackButton}"
                    />
                </uxap:actions>
            </uxap:ObjectPageHeader>
        </uxap:headerTitle>
        <uxap:sections>
            <uxap:ObjectPageSection title="{i18n>productDetailsSection}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection>
                        <f:SimpleForm
                            id="productForm"
                            editable="false"
                            layout="ResponsiveGridLayout"
                        >
                            <f:content>
                                <Label text="{i18n>productNameColumn}" />
                                <Text text="{odataV2>Name}" />

                                <Label text="{i18n>productDescriptionColumn}" />
                                <Text text="{odataV2>Description}" />

                                <Label text="{i18n>productReleaseDateColumn}" />
                                <Text
                                    text="{
                                        path: 'odataV2>ReleaseDate',
                                        type: 'sap.ui.model.type.Date',
                                        formatOptions: { pattern: 'yyyy-MM-dd' }
                                    }"
                                />

                                <Label text="{i18n>productDiscontinuedDateColumn}" />
                                <Text
                                    text="{
                                        path: 'odataV2>DiscontinuedDate',
                                        type: 'sap.ui.model.type.Date',
                                        formatOptions: { pattern: 'yyyy-MM-dd' }
                                    }"
                                />

                                <Label text="{i18n>productRatingColumn}" />
                                <RatingIndicator
                                    value="{odataV2>Rating}"
                                    editable="false"
                                    enabled="false"
                                    iconSize="16px"
                                    maxValue="5"
                                />

                                <Label text="{i18n>productPriceColumn}" />
                                <ObjectNumber
                                    number="{
                                        path: 'odataV2>Price',
                                        type: 'FloatType',
                                        formatOptions: { minIntegerDigits: 2 }
                                    }"
                                />
                            </f:content>
                        </f:SimpleForm>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <uxap:ObjectPageSection title="{i18n>supplierSection}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection>
                        <smart:SmartTable
                            id="supplierTable"
                            entitySet="Suppliers"
                            header="{i18n>supplierTableTitle}"
                            initiallyVisibleFields="Name,Street,City,State,ZipCode,Country"
                            ignoredFields="ID,Concurrency"
                            smartFilterId="supplierSmartFilter"
                            useExportToExcel="false"
                            useVariantManagement="false"
                            useTablePersonalisation="true"
                            showRowCount="true"
                        />
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>


        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>
