<mvc:View
    controllerName="sapui5task2.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <IconTabBar id="iconTabBar" select=".onTabSelect">
                <items>
                    <IconTabFilter
                        id="jsonTab"
                        key="json"
                        text="{i18n>JSONModel}"
                    />
                    <IconTabFilter
                        id="odataTabV2"
                        key="odataV2"
                        text="{i18n>oDataV2Model}"
                    />
                    <IconTabFilter
                        id="odataTabV4"
                        key="odataV4"
                        text="{i18n>oDataV4Model}"
                    />
                </items>
            </IconTabBar>
        </content>
    </Page>
</mvc:View>
