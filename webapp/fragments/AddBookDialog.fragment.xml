<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
    <Dialog
        id="add_book_dialog"
        title="{i18n>addBookDialogTitle}"
        type="Message"
    >
        <content>
            <f:SimpleForm
                id="add_book_form"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="0"
                emptySpanL="0"
                emptySpanM="0"
                emptySpanS="0"
                columnsXL="2"
                columnsL="2"
                columnsM="2"
                singleContainerFullSize="false"
            >
                <f:content>
                    <Label
                        id="book_name_label"
                        text="{i18n>bookNameLabel}"
                        required="true"
                    />
                    <Input
                        id="book_name_input"
                        value="{
                            path: 'dialogBook>/book/Name'
                        }"
                        placeholder="{i18n>bookNamePlaceholder}"
                        change=".onValidateForm"
                        valueStateText="{dialogBook>/validation/Name}"
                    />
                    <Label
                        id="book_author_label"
                        text="{i18n>bookAuthorLabel}"
                        required="true"
                    />
                    <Input
                        id="book_author_input"
                        value="{
                            path: 'dialogBook>/book/Author'
                        }"
                        placeholder="{i18n>bookAuthorPlaceholder}"
                        change=".onValidateForm"
                        valueStateText="{dialogBook>/validation/Author}"
                    />

                    <Label
                        id="book_genre_label"
                        text="{i18n>bookGenreLabel}"
                        required="true"
                    />
                    <Input
                        id="book_genre_input"
                        value="{
                            path: 'dialogBook>/book/Genre'
                        }"
                        placeholder="{i18n>bookGenrePlaceholder}"
                        change=".onValidateForm"
                        valueStateText="{dialogBook>/validation/Genre}"
                    />

                    <Label
                        id="book_release_date_label"
                        text="{i18n>bookReleaseDateLabel}"
                        required="true"
                    />
                    <DatePicker
                        id="book_release_date_picker"
                        value="{
                            path: 'dialogBook>/book/ReleaseDate'
                        }"
                        valueFormat="yyyy-MM-dd"
                        change=".onValidateForm"
                        displayFormat="long"
                        valueStateText="{dialogBook>/validation/ReleaseDate}"
                    />

                    <Label
                        id="book_quantity_label"
                        text="{i18n>bookQuantityLabel}"
                        required="true"
                    />
                    <StepInput
                        id="book_quantity_input"
                        value="{
                            path: 'dialogBook>/book/AvailableQuantity'
                        }"
                        min="1"
                        max="1000"
                        change=".onValidateForm"
                        valueStateText="{dialogBook>/validation/AvailableQuantity}"
                    />
                </f:content>
            </f:SimpleForm>
        </content>
        <beginButton>
            <Button
                id="dialog_button_on_confirm_add"
                text="{i18n>addButton}"
                type="Emphasized"
                press=".onConfirmAddBook"
                visible="{dialogBook>/validation/isValid}"
            />
        </beginButton>
        <endButton>
            <Button
                id="dialog_button_on_cancel_add"
                text="{i18n>cancelButton}"
                type="Default"
                press=".onCloseAddBookDialog"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
