<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="delete_books_dialog"
        title="{i18n>deleteDialogTitle}"
        type="Message"
    >
        <content>
            <Text
                id="dialog_text_on_confirm_delete"
                text="{i18n>deleteConfirmationText}"
            />
        </content>
        <beginButton>
            <Button
                id="dialog_button_on_confirm_delete"
                text="{i18n>yesButton}"
                type="Emphasized"
                press=".onConfirmDeleteBooks"
            />
        </beginButton>
        <endButton>
            <Button
                id="dialog_button_on_reject_delete"
                text="{i18n>noButton}"
                type="Default"
                press=".onCloseDeleteBooksDialog"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
